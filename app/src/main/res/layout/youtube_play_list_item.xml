<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background_white"
        android:padding="10dp"
        android:layout_marginBottom="1dp">

        <LinearLayout
            android:id="@+id/video_title_line"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/left_box"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@color/theme_point"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/left_video_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:text="동영상"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/left_box_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/video_thumbnail"
                    android:layout_width="120dp"
                    android:layout_height="74dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:background="@color/text_dark_gray"
                    android:alpha="0.8"
                    android:layout_margin="5dp"
                    android:layout_alignBottom="@id/video_thumbnail"
                    android:layout_alignRight="@id/video_thumbnail"/>

                </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/video_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Video Title text"
                    android:textColor="@color/text_dark_gray"
                    android:lineSpacingMultiplier="1.4"
                    android:lines="3"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="4dp"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="12dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="4dp">


                    <TextView
                        android:id="@+id/video_date"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="2015.01.01"
                        android:textSize="12dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_light_gray"/>

