<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp"
            android:background="@color/background_white"
            android:gravity="center">
            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/user_2x"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp"
            android:background="@color/background_white">
            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="16dp"
                android:textColor="@color/text_light_gray"
                android:padding="20dp"/>
            <TextView
                android:id="@+id/user_sandbox_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="BROWN"
                android:lines="1"
                android:textColor="@color/theme_point"
                android:textSize="16dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="계정"
                android:textSize="16dp"
                android:textColor="#d2d2d2"
                android:padding="20dp"/>
            <TextView
                android:id="@+id/user_google_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="brown@gmail.com"
                android:textColor="#404040"
                android:textSize="16dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="버전정보"
                android:textSize="16dp"
                android:textColor="#d2d2d2"
                android:padding="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version"
                android:textColor="#404040"
                android:textSize="16dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="푸시알림"
                android:textSize="16dp"
                android:textColor="#d2d2d2"
                android:padding="20dp"/>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">
            <!--<Button-->
                <!--android:id="@+id/user_save_button"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:padding="4dp"-->
                <!--android:background="#48cfad"-->
                <!--android:layout_marginTop="16dp"-->
                <!--android:layout_marginLeft="20dp"-->
                <!--android:layout_marginRight="20dp"-->
                <!--android:textSize="16dp"-->
                <!--android:text="저장"/>-->
            <Button
                android:id="@+id/user_logout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/theme_button"
                android:textSize="16dp"
                android:text="로그아웃"/>

            </LinearLayout>

        </LinearLayout>
</FrameLayout>